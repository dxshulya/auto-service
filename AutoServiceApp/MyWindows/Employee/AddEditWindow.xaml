        <Label Content="Пароль" HorizontalAlignment="Left" Margin="47,191,0,0" VerticalAlignment="Top"/>
        <Button Content="Сохранить клиента" HorizontalAlignment="Left" Margin="47,232,0,0" VerticalAlignment="Top" Width="198" Height="31" Click="Button_Click"/>
        <PasswordBox x:Name="password_box" HorizontalAlignment="Right" Height="23" Margin="0,191,142.2,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
