        mc:Ignorable="d"
        Title="Клиент" Height="344.4" Width="393.6">
    <Grid>
        <TextBox x:Name="surname_box" Height="23" Margin="0,33,142.2,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="47,31,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="name_box" Height="23" Margin="0,70,142.2,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120"/>
